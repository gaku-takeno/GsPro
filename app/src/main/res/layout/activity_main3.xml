<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"                android:layout_height="match_parent"                tools:context="com.example.gspro.activity.MainActivity"    >    <LinearLayout        android:layout_width="fill_parent"        android:layout_height="fill_parent"        android:orientation="vertical"        android:layout_margin="0dp"        >        <!--top image-->        <LinearLayout            android:layout_width="fill_parent"            android:layout_height="200dp"            android:orientation="vertical"            >            <RelativeLayout                android:orientation="vertical"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:gravity="top"                >                <ImageView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:src="@drawable/cover_icon"                    android:scaleType="fitXY"                    android:contentDescription="画像の説明"                    />                <RelativeLayout                    android:orientation="vertical"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:gravity="top"                    android:paddingTop="130dp"                    android:paddingLeft="10dp"                    >                    <ImageView                        android:background="@color/white"                        android:id="@+id/imageview"                        android:layout_width="100px"                        android:layout_height="100px"                        android:src="@drawable/my_icon"                        android:scaleType="fitStart"                        android:contentDescription="画像の説明"                        android:padding="5dp"                        />                </RelativeLayout>            </RelativeLayout>        </LinearLayout>        <!--second image-->        <LinearLayout            android:orientation="horizontal"            android:layout_width="fill_parent"            android:layout_height="50dp"            android:layout_marginBottom="0dp">            <TextView                android:layout_width="0dp"                android:layout_height="fill_parent"                android:layout_weight="1"                android:layout_margin="0dp"                android:text="button"                android:gravity="center"                android:background="@color/Honeydew"/>            <TextView                android:layout_width="0dp"                android:layout_height="fill_parent"                android:layout_weight="1"                android:layout_margin="0dp"                android:text="button"                android:gravity="center"                android:background="@color/gray"/>            <ImageView                android:layout_width="0dp"                android:layout_height="fill_parent"                android:layout_weight="1"                android:layout_margin="0dp"                android:src="@drawable/ic_drawer" />        </LinearLayout>        <!--third image-->        <LinearLayout            android:orientation="horizontal"            android:layout_width="match_parent"            android:layout_height="50dp"            android:background="@color/white"            android:layout_marginRight="0dp"            android:layout_marginLeft="0dp"            android:layout_marginBottom="0dp"            android:layout_marginTop="0dp"            android:padding="5dp">            <ImageView                android:layout_width="70dp"                android:layout_height="match_parent"                android:layout_margin="0dp"                android:gravity="center"                android:src="@drawable/clip_mark"                />            <TextView                android:layout_width="190dp"                android:layout_height="fill_parent"                android:layout_margin="0dp"                android:text="東京都国立市"                android:gravity="left|center"                android:background="@color/gray"/>            <TextView                android:layout_width="20dp"                android:layout_height="fill_parent"                android:gravity="center"                android:paddingLeft="3dp"                android:layout_marginRight="0dp"                android:text="34"                android:layout_marginLeft="0dp"/>        </LinearLayout>        <!--fourth image-->        <LinearLayout            android:orientation="horizontal"            android:layout_width="match_parent"            android:layout_height="50dp"            android:background="@color/white"            android:layout_marginRight="0dp"            android:layout_marginLeft="0dp"            android:layout_marginBottom="0dp"            android:layout_marginTop="0dp"            android:padding="5dp">            <ImageView                android:id="@+id/button1"                android:layout_width="70dp"                android:layout_height="match_parent"                android:layout_margin="0dp"                android:gravity="center"                android:src="@drawable/clip_mark"                />            <TextView                android:id="@+id/button2"                android:layout_width="190dp"                android:layout_height="fill_parent"                android:layout_margin="0dp"                android:text="09000000000"                android:gravity="left|center"                android:background="@color/gray"/>            <TextView                android:id="@+id/button3"                android:layout_width="20dp"                android:layout_height="fill_parent"                android:gravity="center"                android:paddingLeft="3dp"                android:layout_marginRight="0dp"                android:text="34"                android:layout_marginLeft="0dp"/>        </LinearLayout>        <!--fifth image-->        <LinearLayout            android:orientation="vertical"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="@color/gray"            android:gravity="bottom">            <!--sixth-->            <LinearLayout                android:orientation="horizontal"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:background="@color/gray"                android:gravity="bottom">                <ImageView                    android:layout_width="0dp"                    android:layout_height="70dp"                    android:gravity="top"                    android:layout_weight="1"                    android:src="@drawable/user_icon"                    />                <ImageView                    android:layout_width="0dp"                    android:layout_height="70dp"                    android:layout_weight="1"                    android:src="@drawable/user_icon"                    android:gravity="top"                    />                <ImageView                    android:layout_weight="1"                    android:layout_width="0dp"                    android:layout_height="70dp"                    android:gravity="top"                    android:src="@drawable/user_icon"                    />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_width="match_parent"                android:layout_height="20dp"                android:background="@color/gray"                android:layout_marginBottom="4dp"                android:gravity="top">                <TextView                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:text="織田信長"                    android:layout_weight="1"                    android:gravity="center"                    />                <TextView                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:text="豊臣秀吉"                    android:layout_weight="1"                    android:gravity="center"                    />                <TextView                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:text="徳川家康"                    android:layout_weight="1"                    android:gravity="center"                    />            </LinearLayout>        </LinearLayout>    </LinearLayout></RelativeLayout>